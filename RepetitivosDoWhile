#include <iostream>

using namespace std;

int main()
{
    int i,n;
    i=0;
    cout<<"Ingrese el numero del cual quiere imprimir sus numeros pares"<<endl;
    cin>>n;
    do
    {
        if(i%2==0)
        {
            cout<<i<<endl;
        }
        i++;
    }
    while (i<=n);
    
    return 0;
}#include <iostream>

